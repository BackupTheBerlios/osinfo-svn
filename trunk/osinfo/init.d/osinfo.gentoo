source /etc/osinfo.conf

depend() {
	after *
}

start() {
	ebegin "Running osinfo"
	start-stop-daemon --start --exec /usr/local/bin/osinfo -- "${osinfo_options}" "${osinfo_modules}" -o "${osinfo_output_file}"
	eend $? 
}

