#XMLFILE="$(get_hostname)_$(get_mac_address).xml"
XMLFILE="$(get_hostname).xml"
XSLFILE="osinfo.xsl.debug"
rm "$XSLFILE" -f

# if the conf file is not available..
[ ! "$error_log" ] && error_log="/var/log/osinfo.log"
